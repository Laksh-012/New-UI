<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Test.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Test"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Test">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Background="#0F0F0F">
        <TextBlock Text="Secure Sphereâ„¢" Margin="10"/>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,12,0,0" Padding="5" Spacing="5" >
            
            <!-- Security Button -->
            <Button x:Name="Securitybtn" CornerRadius="5" Click="Security_click">
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <Image Source="/Assets/shield.png" Width="16" Height="16"/>
                </StackPanel> 
            </Button>
            
            <!-- Performance Button -->
            <Button x:Name="Performancebtn" CornerRadius="5" Click="Performance_click">
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <Image Source="/Assets/Performance.png" Width="16" Height="16"/> 
                </StackPanel>
            </Button>

        </StackPanel>
        <Frame x:Name="MainFrame" Grid.Row="1"/>
    </Grid>
    
    
</Window>
