<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Test.Panel.SecurityPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Test.Panel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>

        <!-- Page Layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="900"/>
            <!-- Top Menu Area -->
            <RowDefinition Height="*"/>
            <!-- Content Area -->
        </Grid.RowDefinitions>

        <!-- TOP MENU CONTAINER -->
        <Grid Grid.Row="0"
              Background="#222831"
              CornerRadius="20"
              Margin="0,60,0,0">

            <!-- FIX: Define rows -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Buttons -->
                <RowDefinition Height="*"/>
                <!-- Frame -->
            </Grid.RowDefinitions>

            <!-- MENU BUTTONS -->
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Spacing="20"
                        Margin="20"
                        Grid.Row="0">

                <Button x:Name="DashboardBtn"
                        CornerRadius="20"
                        Content="DASHBOARD"
                        Click="Dashboard_click"/>

                <Button x:Name="ProtectionBtn"
                        CornerRadius="20"
                        Content="PROTECTION"
                        Click="Protection_click"/>

                <Button x:Name="WebSecurityBtn"
                        CornerRadius="20"
                        Content="WEB SECURITY"
                        Click="WebSecurity_click"/>

                <Button x:Name="DevicesBtn"
                        CornerRadius="20"
                        Content="DEVICES"
                        Click="Devices_click"/>

                <Button x:Name="SettingsBtn"
                        CornerRadius="20"
                        Content="SETTINGS"
                        Click="Settings_click"/>

            </StackPanel>

            <!-- CONTENT FRAME -->
            <Frame x:Name="MainFrame"
                   Grid.Row="1"
                   Margin="10"/>

        </Grid>

    </Grid>
</Page>