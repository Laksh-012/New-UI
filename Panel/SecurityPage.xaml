<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Test.Panel.SecurityPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Test.Panel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="180"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Grid Grid.Row="0" Background="#222831" CornerRadius="20" Margin="60">
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        CornerRadius="20"
                        Spacing="20">
                
                <Button x:Name="DashboardBtn"
                        CornerRadius="20"
                        Content="DASHBOARD"
                        Click="Dashboard_click"
                        />

                <Button x:Name="ProtectionBtn"
                        CornerRadius="20"
                        Content="PROTECTION"
                        Click="Protection_click"/>

                <Button x:Name="WebSecurityBtn"
                        CornerRadius="20"
                        Content="WEB SECURITY"
                        Click="WebSecurity_click"/>

                <Button x:Name="DevicesBtn"
                        CornerRadius="20"
                        Content="DEVICES"
                        Click="Devices_click"/>

                <Button x:Name="SettingsBtn"
                        CornerRadius="20"
                        Content="SETTINGS"
                        Click="Settings_click"/>
            </StackPanel>
            <Frame x:Name="MainFrame" Grid.Row="1"/>
        </Grid>
    </Grid>
</Page>
